package pl.MB.library.io.file;
import pl.MB.library.exception.NoSuchFileTypeException;
import pl.MB.library.io.ConsolePrinter;
import pl.MB.library.io.DataReader;

import java.util.Locale;


public class FileManagerBuildier {
    private ConsolePrinter printer;
    private DataReader reader;



    public FileManagerBuildier(ConsolePrinter printer, DataReader reader){

        this.printer = printer;
        this.reader = reader;
    }

    public FileManager bulid(){
        printer.printLine("Wybierz format danych:");
        FileType fileType = getFileType();
        switch (fileType){
            case SERIAL:
                return new SerializableFileManager();
            default:
                throw new NoSuchFileTypeException("Nieobsługwiany typ danych");
        }
    }


    private FileType getFileType(){
        boolean typeOk = false;
        FileType result = null;
        do{
            printTypes();
            String type = reader.getString().toUpperCase();
            try{
                result = FileType.valueOf(type);
                typeOk = true;
            }catch (IllegalArgumentException e){
                printer.printLine("Nieobsługiwany typ danych, wybierz ponownie");
            }
        }while(!typeOk);
        return result;
    }
    private void printTypes(){
        for(FileType value : FileType.values()){
            printer.printLine(value.name());
        }

    }

}
